<% include ./partials/header %>

<div class="ui vertical stripe segment">
	<div class="ui main middle aligned stackable grid container">
		<div class="row centered">
			<div class="ui four cards">
			<% Blogs.forEach(function(blog){ %>
			<div class="ui pink link card">		
			  <div class="content">
			    <a href="/blogs/<%= blog._id %>" class="ui floated left header"><%= blog.title %></a>
			    <div class="meta">
			      <span class="right floated time"><%= time %></span>
			    </div>
			    <a href="/blogs/<%= blog._id %>" class="description">
			      <img src="<%= blog.image %>" class="ui large bordered rounded image" >
			    </a>
			  </div>
			  <div class="extra content">
			    <span class="left floated like">
			      <i class="small like icon"></i>
			      Like
			    </span>
			    <div class="right floated author">
			      <img class="ui avatar image" src="/images/avatar/small/matt.jpg"> <%= blog.author.username %>
			    </div>
			  </div>
			</div>
			<% }) %>
			</div>
		</div>
	</div>
</div>

<% include ./partials/footer %>